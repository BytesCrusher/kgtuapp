<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmets.ProfileFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/profileScheduleDiv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_profileTitle"
            style="@style/profileTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="@string/tv_profileTitleText" />

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/schedule"
            android:layout_width="match_parent"
            android:layout_height="122dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileSettingsDiv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profileScheduleDiv">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_profileSettingsText"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="532dp"
            style="@style/profileTitleTextStyle"
            android:gravity="left"/>

        <Button
            android:id="@+id/b_changeLanguageButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/manrope"
            android:strokeColor="@color/strokeAudienceInScheduleButton"
            android:text="@string/b_changeLanguageString"
            android:textSize="16sp"
            app:iconGravity="start"
            app:iconPadding="0dp"
            app:strokeWidth="1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileAboutAppDiv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileSettingsDiv">

        <TextView
            android:id="@+id/tv_profileAboutApp"
            style="@style/profileTitleTextStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="@string/tv_profileTitleText" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


