<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#14006399"
    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/mainMenuButtonSchedule"
            style="@style/mainMenuViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_main_menu_button_schedule"
            android:text="@string/main_menu_button_schedule" />

        <Button
            android:id="@+id/mainMenuButtonCalendar"
            style="@style/mainMenuViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_main_menu_button_calendar"
            android:text="@string/main_menu_button_calendar" />

        <Button
            android:id="@+id/mainMenuButtonUniversity"
            style="@style/mainMenuViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_main_menu_button_university"
            android:text="@string/main_menu_button_university" />

        <Button
            android:id="@+id/mainMenuButtonPerson"
            style="@style/mainMenuViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_main_menu_button_profile"
            android:text="@string/main_menu_button_profile" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>