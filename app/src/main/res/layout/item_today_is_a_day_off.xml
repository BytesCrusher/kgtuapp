<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/b_todayADayOff"
        style="@style/HeadlineSmall"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:backgroundTint="#C3FFD0"
        android:backgroundTintMode="add"
        android:fontFamily="@font/manrope_bold"
        android:text="@string/b_today_is_a_day_off_text"
        android:textAlignment="center"
        android:textAppearance="@style/HeadlineSmall"
        android:textColor="@color/scheduleCertainDayTitleText"
        android:textStyle="bold"
        app:cornerRadius="100dp"
        app:flow_verticalAlign="center"
        app:icon="@drawable/ic_today_a_day_off"
        app:iconGravity="textStart"
        app:iconTint="@color/scheduleCertainDayTitleText"
        android:shadowColor="@android:color/white"
         />

</LinearLayout>